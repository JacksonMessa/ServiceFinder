<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".cadastro.FragmentCadastroRevisar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Revise seus Dados"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/PretoOuBranco">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/BrancoOuPreto"
                    android:divider="?attr/dividerHorizontal"
                    android:padding="2dp"
                    android:showDividers="middle|beginning|end|none">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="Dados Gerais"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Nome:"
                            android:textSize="18sp" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:fadeScrollbars="false">

                            <TextView
                                android:id="@+id/textViewNome"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textSize="18sp" />
                        </HorizontalScrollView>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Sobrenome:"
                            android:textSize="18sp" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:fadeScrollbars="false">

                            <TextView
                                android:id="@+id/textViewSobrenome"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textSize="18sp" />
                        </HorizontalScrollView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowCpf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="CPF"
                            android:textSize="18sp" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:fadeScrollbars="false">

                            <TextView
                                android:id="@+id/textViewCPF"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textSize="18sp" />
                        </HorizontalScrollView>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Email"
                            android:textSize="18sp" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:fadeScrollbars="false">

                            <TextView
                                android:id="@+id/textViewEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:textSize="18sp" />
                        </HorizontalScrollView>

                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEditarDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/AzulSecundario"
                android:text="Editar Dados"
                android:textColor="@color/Branco"
                android:textSize="18sp"
                app:icon="@drawable/edit_24"
                app:iconGravity="textEnd"
                app:iconSize="20dp"
                app:iconTint="@color/Branco" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/PretoOuBranco">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/BrancoOuPreto"
                    android:divider="?attr/dividerHorizontal"
                    android:padding="2dp"
                    android:showDividers="middle|beginning|end|none">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="Foto de Perfil"
                            android:textAlignment="center"
                            android:textSize="22sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            app:cardCornerRadius="300dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imgFotoPerfil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/AzulSecundario"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/person_24" />

                        </androidx.cardview.widget.CardView>
                    </TableRow>
                </TableLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEditarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/AzulSecundario"
                android:text="Editar Foto"
                android:textColor="@color/Branco"
                android:textSize="18sp"
                app:icon="@drawable/edit_24"
                app:iconGravity="textEnd"
                app:iconSize="20dp"
                app:iconTint="@color/Branco" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/PretoOuBranco">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/BrancoOuPreto"
                    android:divider="?attr/dividerHorizontal"
                    android:padding="2dp"
                    android:showDividers="middle|beginning|end|none"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="Dados de Prestador"
                            android:textAlignment="center"
                            android:textSize="22sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Prestador de Serviços:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textViewPrestador"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:text="Não"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/rowServico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_span="2"
                            android:background="@color/PretoOuBranco"
                            android:minHeight="50dp"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:backgroundTint="@color/AzulSecundarioouPrincipal"
                                android:text="Serviços Prestados"
                                android:textAlignment="center"
                                android:textColor="@color/Branco"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/PretoOuBranco" />

                            <com.tcc.tcc.view.ScrollListView
                                android:id="@+id/listServico"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@color/BrancoOuPreto"
                                android:divider="@color/TextoFundoClaro"
                                android:dividerHeight="1dp"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:visibility="visible"
                                tools:listitem="@layout/item_simples" />

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/rowCidade"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_span="2"
                            android:background="@color/PretoOuBranco"
                            android:minHeight="50dp"
                            android:orientation="vertical"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:backgroundTint="@color/AzulSecundarioouPrincipal"
                                android:text="Cidades de Atendimento"
                                android:textAlignment="center"
                                android:textColor="@color/Branco"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/PretoOuBranco" />

                            <com.tcc.tcc.view.ScrollListView
                                android:id="@+id/listCidade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@color/BrancoOuPreto"
                                android:divider="@color/TextoFundoClaro"
                                android:dividerHeight="1dp"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:visibility="visible"
                                tools:listitem="@layout/item_simples" />

                        </LinearLayout>
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEditarPrestador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/AzulSecundario"
                android:text="Editar Prestador"
                android:textColor="@color/Branco"
                android:textSize="18sp"
                app:icon="@drawable/edit_24"
                app:iconGravity="textEnd"
                app:iconSize="20dp"
                app:iconTint="@color/Branco" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/PretoOuBranco">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/BrancoOuPreto"
                    android:divider="?attr/dividerHorizontal"
                    android:padding="2dp"
                    android:showDividers="middle|beginning|end|none"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="Validação de Email"
                            android:textAlignment="center"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Email Validado:"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textViewEmailValidado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            android:text="Sim"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/rowAlertaEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="2dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="10"
                            android:background="@android:color/transparent"
                            app:srcCompat="@android:drawable/ic_dialog_alert"
                            app:tint="@color/AmareloAlerta" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Valide seu email para finalizar o cadastro"
                            android:textSize="18sp" />
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnConferirValidacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/AzulSecundario"
                android:text="Conferir Validação"
                android:textColor="@color/Branco"
                android:textSize="18sp"
                app:icon="@drawable/edit_24"
                app:iconGravity="textEnd"
                app:iconSize="20dp"
                app:iconTint="@color/Branco" />

            <Button
                android:id="@+id/btnFinalizar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Finalizar Cadastro"
                android:textColor="@color/Branco"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>