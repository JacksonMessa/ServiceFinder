<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BrancoOuPreto"
    android:gravity="center|center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:backgroundTint="@android:color/transparent"
            app:cardCornerRadius="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:backgroundTint="@color/AzulSecundario"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/person_24" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/textViewNome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/PretoOuBranco"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nome Sobrenome" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="Avaliação:"
                    android:textColor="@color/PretoOuBranco"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imgEstrela1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    app:tint="@color/AmareloAlerta"
                    tools:srcCompat="@drawable/star_rate_24" />

                <ImageView
                    android:id="@+id/imgEstrela2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@android:color/transparent"
                    app:tint="@color/AmareloAlerta"
                    tools:srcCompat="@drawable/star_rate_24" />

                <ImageView
                    android:id="@+id/imgEstrela3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@android:color/transparent"
                    app:tint="@color/AmareloAlerta"
                    tools:srcCompat="@drawable/star_rate_24" />

                <ImageView
                    android:id="@+id/imgEstrela4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@android:color/transparent"
                    app:tint="@color/AmareloAlerta"
                    tools:srcCompat="@drawable/star_rate_24" />

                <ImageView
                    android:id="@+id/imgEstrela5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/transparent"
                    app:tint="@color/AmareloAlerta"
                    tools:srcCompat="@drawable/star_rate_24" />

                <TextView
                    android:id="@+id/textViewAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    tools:text="5.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNumServicos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    tools:text="0" />

                <TextView
                    android:id="@+id/textViewServicosPrestados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    tools:text=" Serviços Prestados" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/chat_bubble_24"
                        app:tint="@color/AzulPrincipalouSecundario" />

                    <ImageButton
                        android:id="@+id/btnPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/person_24"
                        app:tint="@color/AzulPrincipalouSecundario" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/AzulSecundario" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:text="Tipos de Serviços Prestados:"
        android:textColor="@color/PretoOuBranco"
        android:textSize="16sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <LinearLayout
            android:id="@+id/layoutServicos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:backgroundTint="@color/AzulSecundario" />

</LinearLayout>